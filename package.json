{
  "name": "zymble",
  "displayName": "Zymble",
  "description": "React Workflow Simplified!",
  "version": "1.1.2",
  "license": "MIT",
  "publisher": "nye",
  "repository": "https://github.com/nhope123/zymble",
  "homepage": "https://github.com/nhope123/zymble/blob/main/README.md",
  "icon": "src/assets/logo.png",
  "galleryBanner": {
    "color": "#EBE5E5",
    "theme": "dark"
  },
  "keywords": [
    "react",
    "prettier",
    "formatting",
    "hooks",
    "components"
  ],
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets",
    "Linters",
    "Other"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true,
      "description": "This extension can run in untrusted workspaces."
    },
    "virtualWorkspaces": {
      "supported": true,
      "description": "This extension can run in virtual workspaces."
    }
  },
  "activationEvents": [
    "workspaceContains:package.json"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zymble.createComponent",
        "title": "Create React Component",
        "category": "Zymble"
      },
      {
        "command": "zymble.createHook",
        "title": "Create React Hook",
        "category": "Zymble"
      },
      {
        "command": "zymble.addPrettierConfig",
        "title": "Add Prettier Configuration",
        "category": "Zymble"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "zymble.createComponent",
          "when": "isReactProject",
          "group": "Zymble"
        },
        {
          "command": "zymble.createHook",
          "when": "isReactProject",
          "group": "Zymble"
        },
        {
          "command": "zymble.addPrettierConfig",
          "when": "noPrettierConfig",
          "group": "Zymble"
        }
      ]
    },
    "languages": [
      {
        "id": "javascript",
        "aliases": [
          "JavaScript",
          "javascript",
          "js"
        ],
        "extensions": [
          ".js"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "javascriptreact",
        "aliases": [
          "React"
        ],
        "extensions": [
          ".jsx"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "typescriptreact",
        "aliases": [
          "React"
        ],
        "extensions": [
          ".tsx"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "typescript",
        "aliases": [
          "TypeScript",
          "typescript",
          "typescriptreact",
          "ts"
        ],
        "extensions": [
          ".ts"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "prepack": "yarn lint && yarn format",
    "package": "vsce package --no-yarn -o packages/",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node --force-node-api-uncaught-exceptions-policy=true ./node_modules/@vscode/test-electron/out/runTest.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.95.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "assert": "^2.1.0",
    "eslint": "^9.16.0",
    "mocha": "^11.0.1",
    "prettier": "^3.4.2",
    "sharp": "^0.33.5",
    "vscode-test": "^1.6.1"
  }
}
