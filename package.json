{
  "name": "zymble",
  "displayName": "Zymble",
  "description": "React Workflow Simplified!",
  "version": "1.1.0",
  "license": "MIT",
  "publisher": "nye",
  "repository": "https://github.com/nhope123/zymble.git",
  "icon": "assets/logo.png",
  "type": "commonjs",
  "keywords": [
    "react",
    "vite",
    "typescript",
    "mui",
    "i18n",
    "Workflow",
    "Simplified",
    "Prettier",
    "Formatting",
    "Format",
    "config"
  ],
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:package.json"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zymble.createComponent",
        "title": "Create React Component",
        "category": "Zymble"
      },
      {
        "command": "zymble.createHook",
        "title": "Create React Hook",
        "category": "Zymble"
      },
      {
        "command": "zymble.addPrettierConfig",
        "title": "Add Prettier Configuration",
        "category": "Zymble"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "zymble.createComponent",
          "when": "isReactProject",
          "group": "Zymble"
        },
        {
          "command": "zymble.createHook",
          "when": "isReactProject",
          "group": "Zymble"
        },
        {
          "command": "zymble.addPrettierConfig",
          "when": "noPrettierConfig",
          "group": "Zymble"
        }
      ]
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node --force-node-api-uncaught-exceptions-policy=true ./node_modules/@vscode/test-electron/out/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.95.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "assert": "^2.1.0",
    "eslint": "^9.16.0",
    "mocha": "^11.0.1",
    "prettier": "^3.4.2",
    "sharp": "^0.33.5",
    "typescript": "^5.7.2",
    "vscode-test": "^1.6.1"
  }
}
